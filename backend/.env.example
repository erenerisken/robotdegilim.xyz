# Application
APP_NAME=https://robotdegilim.xyz backend
APP_DESCRIPTION=Backend API for https://robotdegilim.xyz
APP_VERSION=1.0.0
ADMIN_EMAIL=info.robotdegilim@gmail.com
ADMIN_SECRET=change-this-admin-secret

# S3
S3_BUCKET=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
# Leave S3_LOCK_OWNER_ID unset to auto-generate per instance.
S3_LOCK_TIMEOUT_SECONDS=10800
ADMIN_LOCK_TIMEOUT_SECONDS=10800

# HTTP
HTTP_TIMEOUT=15
GLOBAL_RETRIES=5
RETRY_BASE_DELAY=1.0
RETRY_JITTER=0.25
THROTTLE_ENABLED=false
# Optional: JSON string map if you need custom headers.
# DEFAULT_HEADERS={"User-Agent":"...","Accept":"...","Accept-Language":"..."}

# Logging
LOG_LEVEL=INFO
LOG_JSON=false
LOG_CONSOLE=true
LOG_RETENTION_DAYS=7
TIMEZONE=Europe/Istanbul

# Mail (optional)
MAIL_ENABLED=false
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
# Optional overrides; if empty runtime falls back to MAIL_USERNAME / ADMIN_EMAIL.
MAIL_SENDER=
MAIL_RECIPIENT=
MAIL_SUBJECT_PREFIX=[robotdegilim]

# Paths
DATA_DIR=data
LOG_DIR=data/logs

# Parser versions
SCRAPE_PARSER_VERSION=1.0.0
MUSTS_PARSER_VERSION=1.0.0
NTE_LIST_PARSER_VERSION=1.0.0

# App context
CONTEXT_MAX_ERRORS=5
